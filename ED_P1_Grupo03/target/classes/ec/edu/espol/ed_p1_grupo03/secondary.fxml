<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ec.edu.espol.ed_p1_grupo03.SecondaryController">

    <!-- Barra superior -->
    <top>
        <HBox spacing="10" style="-fx-background-color: linear-gradient(to right,#27ae60,#2ecc71);"
              alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10" right="20" bottom="10" left="10"/>
            </padding>
            <Button text="Volver al inicio"
                    onAction="#switchToPrimary"
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 15;"/>
            <Label text="EcoTrack ðŸŒ¿"
                   style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label text="GestiÃ³n de residuos"
                   style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Contenido principal -->
    <center>
        <HBox spacing="20">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <!-- Panel izquierdo: datos del residuo -->
            <VBox spacing="10">
                <Label text="Datos del residuo"
                       style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                <GridPane hgap="10" vgap="8">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" prefWidth="90"/>
                        <ColumnConstraints prefWidth="150"/>
                    </columnConstraints>

                    <children>
                        <Label text="ID del residuo:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Nombre:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtNombre" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Peso (Kg):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtPeso" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Tipo:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="cbTipo" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Label text="Zona recolecciÃ³n:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="cbZona" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                        <Label text="Prioridad ambiental:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="cbPrioridad" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                        <Label text="Fecha recolecciÃ³n:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtFecha" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>

                <HBox spacing="10" alignment="CENTER">
                    <Button text="Agregar"
                            onAction="#agregarResiduo"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 15;"/>
                    <Button text="Limpiar"
                            onAction="#limpiarFormulario"
                            style="-fx-background-color: #bdc3c7; -fx-text-fill: #2c3e50; -fx-background-radius: 15;"/>
                </HBox>
            </VBox>

            <!-- Panel derecho: tabla -->
            <VBox spacing="10" HBox.hgrow="ALWAYS">
                <Label text="Lista de residuos registrados"
                       style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Ordena por:"/>
                    <ComboBox fx:id="cbOrden"/>
                    <Button text="Aplicar" onAction="#aplicarOrden"/>
                </HBox>

                <TableView fx:id="tablaResiduos" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="70"/>
                        <TableColumn fx:id="colNombre" text="Nombre" prefWidth="110"/>
                        <TableColumn fx:id="colTipo" text="Tipo" prefWidth="90"/>
                        <TableColumn fx:id="colPeso" text="Peso" prefWidth="70"/>
                        <TableColumn fx:id="colZona" text="Zona" prefWidth="90"/>
                        <TableColumn fx:id="colPrioridad" text="Prioridad" prefWidth="100"/>
                        <TableColumn fx:id="colFecha" text="Fecha" prefWidth="110"/>
                    </columns>
                </TableView>

                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="Modificar"
                            onAction="#modificarResiduo"
                            style="-fx-background-color: #f1c40f; -fx-text-fill: white; -fx-background-radius: 15;"/>
                    <Button text="Eliminar"
                            onAction="#eliminarResiduo"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 15;"/>
                </HBox>
            </VBox>
        </HBox>
    </center>

</BorderPane>
